<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="send_pdf_report_tree" model="ir.ui.view">
        <field name="name">report.send.mail.tree</field>
        <field name="model">report.send.mail</field>
        <field name="arch" type="xml">
            <tree string="Reports">
                <field name="invoice_id"/>
            </tree>
        </field>
    </record>

    <record id="send_pdf_report_form" model="ir.ui.view">
        <field name="name">report.send.mail.form</field>
        <field name="model">report.send.mail</field>
        <field name="arch" type="xml">
            <form string="Family">
                <sheet>
                    <group>
                        <field name="invoice_id"/>
                    </group>
                    <footer>
                        <button name="send_email_with_pdf_attach" string="Print" type="object" class="btn-primary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
    <record id="send_pdf_report_action" model="ir.actions.act_window">
        <field name="name">Send Report Pdf</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">report.send.mail</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Mail.
            </p>
        </field>
    </record>
    <menuitem id="send_pdf_report_menu" name="Mail" action="send_pdf_report_action"/>
</odoo>