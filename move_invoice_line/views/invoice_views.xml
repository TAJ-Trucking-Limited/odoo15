<?xml version="1.0"?>
<odoo>
<data>
    <record id="report_invoice_document_inherit" model="ir.ui.view">
        <field name="name">taj_report_invoice_document</field>
        <field name="inherit_id" ref="account.report_invoice_document"/>
        <field name="arch" type="xml">
            <xpath expr="//t[@t-set='address']"  position="replace">
                 <t t-set="address" class="col-sm-12 ml-auto">

                    <address t-field="o.partner_id" t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}' />
                    <div t-if="o.partner_id.vat" class="mt16">
                        <t t-if="o.company_id.account_fiscal_country_id.vat_label" t-esc="o.company_id.account_fiscal_country_id.vat_label" id="inv_tax_id_label"/>
                        <t t-else="">TIN NO</t>: <span t-field="o.partner_id.vat"/></div>
                     <t t-if="o.partner_id.vrn">VRN NO: <span t-field="o.partner_id.vrn"/></t>
                </t>
            </xpath>
            <field name="address" position="attributes">
                 <attribute name="class">col-sm-12 ml-auto</attribute>
             </field>


                 <xpath expr="//table[@name='invoice_line_table']/thead/tr/th[1]" position="after">
                     <th>Truck</th>
                     <th> Container Number</th>
                      <th>Consignee</th>
					<th>Amount TSH</th>
            
				</xpath>
				<xpath expr="//t[@name='account_invoice_line_accountable']/td[1]" position="after">
					<td >
					 <span t-if="line.vehicle_id" t-field="line.vehicle_id"/>

					</td>
                    <td >
					 <span t-if="line.vehicle_id" t-field="line.container_num"/>

					</td>
                    <td >
					 <span t-if="line.vehicle_id" t-field="line.consignee"/>

					</td>
                    <td >
					 <span t-field="line.credit"/>
					 
					</td>
				</xpath>
            <xpath expr="//p[@name='payment_term']" position="after">
                <p >Account Name : TAJ TRUCKING LIMITED</p>
                <p>Account No. USD : 05233990011 </p>
                <p >Swift Transfer : EUAFTZTZ</p>
                 <p >Bank Name : BANK OF AFRICA TANZANIA</p>
                  <p >Bank Address : NDC DEVELOPMENT HOUSE, OHIO STREET/KIVUKONI FRONT</p>

            </xpath>
          
            </field>
      </record>
    </data>
</odoo>