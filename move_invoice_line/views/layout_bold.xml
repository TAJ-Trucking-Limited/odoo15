<?xml version="1.0"?>
<odoo>
    <template id="taj_external_layout_bold" inherit_id="web.external_layout_bold">
         <xpath expr="//div[@name='company_address']" position="replace">
            <div class="col-5 offset-1" name="company_address">
                   <span t-if="company.company_details" t-field="company.company_details"/>
                </div>
        </xpath>

        <xpath expr="//div[hasclass('footer')]" position="replace">
            <div class="col-5 offset-1" name="company_address">
                   <span t-if="company.company_details" t-field="company.company_details"/>
                </div>
        </xpath>
    </template>
</odoo>