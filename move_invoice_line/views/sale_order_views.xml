<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="view_sale_form_madfox" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='order_lines']//field[@name='product_uom_category_id']" position="after">
                 <group name="trip_details">
                    <field name="analytic_account_id" context="{'default_partner_id':partner_invoice_id, 'default_name':name}"  groups="analytic.group_analytic_accounting" force_save="1"/>

                    <field name='file_name' />
                    <field name='container_num' />
                 </group>
            </xpath>

        </field>
    </record>

   

</odoo>
